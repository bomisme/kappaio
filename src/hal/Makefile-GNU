libname=hal
libreleasepath=$(RELEASEDIR)/$(libname)
${CURDIR}/.release_built: ${CURDIR}/.built ${CURDIR}/.stagedir
	cp *.h*  $(libreleasepath) | true
#	cp *.c* $(libreleasepath) | true
#	cp *.cpp $(libreleasepath) | true
#	cp *.c $(libreleasepath) | true
	cp *.o $(libreleasepath) | true
	cp Makefile-Executable.mk $(libreleasepath)/Makefile
	touch .release_built
${CURDIR}/.stagedir:
	mkdir -p $(libreleasepath)
	touch .stagedir
${CURDIR}/.built:
	$(MAKE) -f Makefile-Executable.mk